<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <Button
        android:id="@+id/popup_destination_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/place_destination_marker" />

    <Button
        android:id="@+id/popup_source_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_destination_button"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/place_source_marker" />

    <Button
        android:id="@+id/popup_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_source_button"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/cancel" />
</RelativeLayout>